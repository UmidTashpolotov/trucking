<div class="container">
  <div class="row">
    <% if user_signed_in? %>
            <% if @orders.empty? %>
                <h1>У ВАС ПОКА НЕТ ЗАКАЗОВ</h1>
            <% else %>
                <%= render @orders.reverse %>
            <% end %>
    <% else %>
        <%= render partial: 'promo', collection: @orders.reverse, as: :order %>
    <% end %>
        <%= paginate @orders, :theme => 'twitter-bootstrap-3' %>
  </div>
</div>