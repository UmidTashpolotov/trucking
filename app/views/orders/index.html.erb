<% if user_signed_in? %>
	<% if current_user.role == 'customer'%>
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
		        <% if current_user.orders.empty?%>
		  			   <h1>У ВАС ПОКА НЕТ ЗАКАЗОВ  </h1>
		        <% else %>
		          <%= render current_user.orders.reverse %>
		        <% end %>
		  	</div>
		  </div>
		</div>
	<% elsif current_user.role == 'worker'%>
		<div class="container">
		  <div class="row">
		    <div class="col-md-8 col-md-offset-2">
		        <% if Order.all.empty? %>
		           <h1> ПОКА НЕТ ЗАКАЗОВ  </h1>
		        <% else %>
		          <%= render Order.all.reverse %>
		        <% end %>
		    </div>
		  </div>
		</div>
	<% end %>
<% else %>
	<h1>НУЖНА РЕГИСТРАЦИЯ ДЛЯ ПРОСМОТРА</h1>
<% end %>