<div class="col-md-9 col-md-offset-2 toppad">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @user.name %> <%= @user.surname %></h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-3 col-lg-3 " align="center">
          <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive">
        </div>
        <div class=" col-md-9 col-lg-9 ">
          <table class="table table-user-information">
            <tbody>
            <tr>
              <td>Роль</td>
              <td><%= @user.role %></td>
            </tr>
            <tr>
              <td><b>Рейтинг</b></td>
              <td><b>4.5</b></td>
            </tr>
            <tr>
              <td><b>Кол-во заказов</b></td>
              <td><b><%= @user.orders.count %></b></td>
            </tr>
            <tr>
              <td>Дата регистрации:</td>
              <td>06/23/2013</td>
            </tr>
            <tr>
            <tr>
              <td>Email</td>
              <td><%= @user.email %></td>
            </tr>
            <td>Телефон</td>
            <td><%= @user.phone %>
            </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% if @user == current_user %>
      <div class="panel-footer">
        <%= link_to 'Редактировать имя или телефон', edit_path, class: 'btn btn-success' %>
        <%= link_to 'Изменить пароль', edit_user_registration_path(current_user), class: 'btn btn-success' %>
        <%= link_to 'Добавить документы', documents_path, class: 'btn btn-info' if can? :read, Document %>
        <%= link_to 'Добавить машину', add_car_path, class: 'btn btn-info', id: 'add_car' if can? :create, Car %>
      </div>
    <% end %>
  </div>
  <%= render 'cars/panel' if @user.worker? %>
  <% if @user.worker? || !@devices.blank? %>
    <div style='width: 800px;'>
      <div id="multi_markers" style='width: 823px; height: 400px;'></div>
    </div>
    <script>
      <%= render 'show.js.erb' %>
    </script>
  <% end %>
  <h3>Отзывы:</h3>
  <%= render @user.comments %>
</div>