    <%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:
    <% @user.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<div class="container col-md-4 col-md-offset-4">
  <div class="row">
    <%= simple_form_for ([:admin, @user]) do |f| %>
          <%= f.input :role, collection: %w[admin customer worker], selected: 'worker' %>
          <%= f.input :email, id: 'user_email' %>
          <%= f.input :name, id: 'user_name' %>
          <%= f.input :surname, id: 'user_surname' %>
          <%= f.input :phone, id: 'user_phone' %>
          <%= f.input :password, id: 'user_password' %>
          <%= f.input :password_confirmation, id: 'user_password_confirmation' %>
          <%= f.button :submit %>
        </div>
    <% end %>
  </div>
</div>