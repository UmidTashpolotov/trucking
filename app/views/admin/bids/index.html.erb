<div class="container" style="margin-top:50px">
  <div class="panel panel-default">
    <div style="margin:7px">
      <div class="col-md-9">
        <div class="btn-group">
          <%= link_to 'Новые', admin_bids_path(:sort => 'new'), class: 'btn btn-default btn-sm' %>
          <%= link_to 'Рассмотренные', admin_bids_path(:sort => 'old'), class: 'btn btn-default btn-sm' %>
        </div>
      </div>
      <div class="col-md-3 pull-right form-group">
        <% form_tag search_results_admin_bids_path, method: :get, role: 'search' do %>
            <%= text_field_tag :query, params[:query], class: 'form-control', style: 'border-radius:0px', placeholder: 'Поиск' %>
        <% end %>
      </div>
    </div>
    <div class="panel-body" style="padding:0">
      <table class="table table-striped table-bordered" style="margin:0">
        <thead>
        <tr>
          <th>Откуда</th>
          <th>Куда</th>
          <th>Вес</th>
          <th>Объём</th>
          <th>Телефон</th>
          <th>Статус</th>
          <th style="width:100px">Действия</th>
        </tr>
        </thead>
        <tbody>
        <%= render @bids %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @bids, :theme => 'twitter-bootstrap-3' %>
</div>