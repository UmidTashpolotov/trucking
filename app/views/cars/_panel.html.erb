<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Машины:</h3>
  </div>
  <div class="panel-body">
    <table class="table table-user-information">
      <thead>
      <tr>
        <th>Название</th>
        <th>Грузоподъмность</th>
        <th>Вместительность</th>
        <th>Тип погрузки</th>
        <th>Тип машины</th>
        <th>Действия</th>
      </tr>
      </thead>
      <tbody>
        <%= render @user.cars unless @user.cars.blank? %>
      </tbody>
    </table>
    <%= content_tag(:h3, 'Нет ни одной машины', class: 'text-center') if @user.cars.blank? %>
  </div>
</div>