<!DOCTYPE html>
<html>
  <head>
    <title>Trucking</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/application/navbar' %>
    
    <% if user_signed_in? %>
      <% if current_user.role == 'customer' %>
        <%= render 'users/customer' %>
      <% elsif current_user.role == 'worker' %>
        <%= render 'users/worker' %>
      <% end %>
      <%= render 'layouts/application/complete_your_profile' if current_user.profile_uncomplete? %>
    <% end %>

    <% flash.each do |type, message| %>
      <%= content_tag :div, message, class: "alert alert-#{type}" %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
