<% blank_fields = current_user.blank_fields %>
<% value = 100 - blank_fields.count * 10 %>
<div class='row'>
  <div class="col-md-11">
    <h3><%= t('profile_complete_status') %> <%= value.to_s + '%' %></h3>
    <h5>
      <% routes = {'name' => edit_path, 'surname' => edit_path, 'car' => add_car_path, 'document' => new_document_path} %>
      <%= t('fill_it') %>
      <%= raw blank_fields.map{ |blank_field| link_to(t(blank_field), routes[blank_field]) }.join(', ') %> <br>
      <%= link_to 'Подтвердите номер телефона', sms_verify_form_users_path unless current_user.phone_checked?%>

    </h5>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="<%= value %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= value %>%;">
        <%= value.to_s + '%' %>
      </div>
    </div>
  </div>
</div>