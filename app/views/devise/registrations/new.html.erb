<div class="row">
  <div class="col-sm-4 col-sm-offset-2">

    <h1 class="text-center"><%= t 'sign_up'%></h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" >
    <%= f.input :phone, required: true, autofocus: true, hint: ("Например: 555123456"), placeholder: '555123456' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length}" + " " + t('characters_minimum') if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>

    <%= f.collection_radio_buttons :role, (User::ROLES.map{ |key| [key ,t(key)] }), :first, :last %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, (t 'sign_up'), id: 'sign_up_button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
